# Grant access to HP WMI devices to the victus-backend user
SUBSYSTEM=="hwmon", KERNELS=="hp-wmi", GROUP="victus-backend", MODE="0664"
SUBSYSTEM=="hwmon", KERNELS=="hp-wmi", ACTION=="add|change", RUN+="/bin/sh -c 'chgrp victus-backend /sys$DEVPATH/fan*_target /sys$DEVPATH/pwm*_enable && chmod 664 /sys$DEVPATH/fan*_target /sys$DEVPATH/pwm*_enable'"
SUBSYSTEM=="hwmon", KERNELS=="hp-wmi", ATTR{fan1_input}=="?*", GROUP="victus-backend", MODE="0444"
SUBSYSTEM=="hwmon", KERNELS=="hp-wmi", ATTR{fan2_input}=="?*", GROUP="victus-backend", MODE="0444"
SUBSYSTEM=="hwmon", KERNELS=="hp-wmi", ATTR{fan1_max}=="?*", GROUP="victus-backend", MODE="0444"
SUBSYSTEM=="hwmon", KERNELS=="hp-wmi", ATTR{fan2_max}=="?*", GROUP="victus-backend", MODE="0444"

# Grant access to HP keyboard LEDs to the victus-backend user
SUBSYSTEM=="leds", KERNELS=="hp::kbd_backlight", ATTR{multi_intensity}=="?*", GROUP="victus-backend", MODE="0664"
SUBSYSTEM=="leds", KERNELS=="hp::kbd_backlight", ATTR{brightness}=="?*", GROUP="victus-backend", MODE="0664"
